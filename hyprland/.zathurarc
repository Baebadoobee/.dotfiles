set    bookmarks-dir             "$HOME/.local/share/zathura/bookmarks"
set    selection-clipboard       clipboard
set    font                      "Noto Serif Nerd Font"
set    page-padding              2
set    adjust-open               "width"
set    window-title-basename     "true"
set    statusbar-basename        "true"
set    statusbar-home-tilde      "true"
set    statusbar-page-percent    "true"
set    recolor                   "true"

set    recolor-lightcolor        "#14141c"
set    default-bg                "#14141c"
set    statusbar-bg              "#14141c"
set    completion-bg             "#14141c"
set    completion-group-bg       "#14141c"
set    completion-hilight-bg     "#14141c"
set    inputbar-bg               "#14141c"
set    highlight-bg              "#14141c"
set    index-bg                  "#14141c"
set    index-active-bg           "#14141c"

set    recolor-darktcolor        "#fcb484"
set    statusbar-fg              "#fcb484"
set    default-fg                "#fcb484"
set    completion-fg             "#fcb484"
set    completion-group-fg       "#fcb484"
set    completion-highlight-fg   "#fcb484"
set    inputbar-fg               "#fcb484" 
set    index-fg                  "#fcb484"
set    index-active-fg           "#fcb484"

set    highlight-color           "rgba(56, 58, 76, 0.5)"

map e exec "/home/bae/.local/share/zathura/highlight_text.sh '$FILE' '$PAGE'"
